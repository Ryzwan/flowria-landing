cat > .gitignore << 'EOF'
# node / package managers
node_modules/
.pnpm-store/
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/sdks
!.yarn/versions

# next / build
.next/
out/
dist/
.vercel/
.turbo/
.cache/

# env & misc
.env
.env.*
.DS_Store
.idea/
.vscode/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
EOF
